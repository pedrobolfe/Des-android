<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="334dp"
        android:layout_height="0dp"
        android:layout_marginBottom="140dp"
        android:text="Insira o nome dos jogadores abaixo."
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TextView5"
        android:layout_width="76dp"
        android:layout_height="39dp"
        android:layout_marginTop="5dp"
        android:text="Jogador 1"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/papelJog1" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="39dp"
        android:onClick="jogar"
        android:text="Jogar"
        app:layout_constraintBottom_toTopOf="@+id/tesouraJog1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="76dp"
        android:layout_height="0dp"
        android:text="Jogador 2"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/papelJog2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tesouraJog1" />

    <EditText
        android:id="@+id/textJogador2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Jogador 1:"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/textJogador2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Jogador 2:"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textJogador2"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/tesouraJog1"
        android:layout_width="92dp"
        android:layout_height="0dp"
        android:layout_marginBottom="33dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pedraJog1"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:srcCompat="@drawable/tesoura" />

    <ImageView
        android:id="@+id/tesouraJog2"
        android:layout_width="91dp"
        android:layout_height="99dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.724"
        app:layout_constraintStart_toEndOf="@+id/pedraJog2"
        app:layout_constraintTop_toBottomOf="@+id/tesouraJog1"
        app:layout_constraintVertical_bias="0.125"
        app:srcCompat="@drawable/tesoura" />

    <TextView
        android:id="@+id/textResultado"
        android:layout_width="245dp"
        android:layout_height="82dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/papelJog1"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toTopOf="@+id/papelJog2"
        app:layout_constraintStart_toEndOf="@+id/TextView5"
        app:srcCompat="@drawable/papel" />

    <ImageView
        android:id="@+id/papelJog2"
        android:layout_width="99dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="238dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/papel" />

    <ImageView
        android:id="@+id/pedraJog1"
        android:layout_width="97dp"
        android:layout_height="91dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toTopOf="@+id/pedraJog2"
        app:layout_constraintStart_toEndOf="@+id/papelJog1"
        app:srcCompat="@drawable/pedra" />

    <ImageView
        android:id="@+id/pedraJog2"
        android:layout_width="84dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/papelJog2"
        app:layout_constraintStart_toEndOf="@+id/papelJog2"
        app:layout_constraintTop_toTopOf="@+id/tesouraJog2"
        app:srcCompat="@drawable/pedra" />

</androidx.constraintlayout.widget.ConstraintLayout>
